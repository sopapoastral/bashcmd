#!/bin/sh

case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case "$(printf "󰐥 Shutdown\n Reboot\n󰒲 Sleep\n󰍃 Logout\n Lock" | dmenu)" in
	'󰐥 Shutdown') $ctl poweroff ;;
	' Reboot') $ctl reboot ;;
	'󰒲 Sleep') slock & $ctl suspend ;;
	'󰍃 Logout') killall xinit ;;
	' Lock') slock ;;
	*) exit 1 ;;
esac

